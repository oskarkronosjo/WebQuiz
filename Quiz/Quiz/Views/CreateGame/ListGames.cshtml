@model IEnumerable<Quiz.Models.GameModel>

@{
    ViewBag.Title = "ListGames";
}

<h2>ListGames</h2>

<p>
    @Html.ActionLink("Create New", "AddGame")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.NumberOfQuestions)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TimePerQuestion)
        </th>
        <th></th>
    </tr>
    @if (Model != null)
    {
foreach (var item in Model)
{
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.NumberOfQuestions)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.TimePerQuestion)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id = item.GameID }) |
            @Html.ActionLink("Details", "Details", new { id = item.GameID }) |
            @Html.ActionLink("Delete", "Delete", new { id = item.GameID })
        </td>
    </tr>
}
    }

</table>
